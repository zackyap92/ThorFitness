<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.zackyap.pdma.User"
    android:background="#0d4aeb">

    <ImageView
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:layout_marginTop="27dp"
        android:id="@+id/textViewUsername"
        tools:text="Username"
        android:layout_height="20dp"
        android:layout_width="150dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        tools:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Get Lean (14%)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        tools:textSize="14sp"
        android:layout_below="@+id/textViewUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />

    <TextView
        android:text="1016 Followers"
        android:layout_width="100dp"
        android:layout_below="@+id/textView3"
        android:layout_toStartOf="@+id/textViewUsername"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="36dp"
        android:id="@+id/textView5"
        android:foregroundGravity="right"
        android:textColor="@android:color/background_light"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <TextView
        android:text="912 Following"
        android:layout_width="100dp"
        android:id="@+id/textView4"
        android:textColor="@android:color/background_light"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/textView3"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <TextView
        android:text="8 Badges"
        android:layout_width="100dp"
        android:id="@+id/textView6"
        android:textColor="@android:color/background_light"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textViewUsername"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="My Meal"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/buttonMeal"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/buttonWorkout"
        android:layout_alignBottom="@+id/buttonWorkout"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:text="Rate My Workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:textSize="24sp"
        android:textColor="@android:color/background_light"
        android:fontFamily="sans-serif"
        android:layout_above="@+id/ratingBar"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="BMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBMI"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/textView19"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:text="My Workout"
        android:id="@+id/buttonWorkout"
        android:layout_height="50dp"
        android:layout_width="150dp"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/buttonBMI"
        android:layout_toStartOf="@+id/imageView" />
</RelativeLayout>
